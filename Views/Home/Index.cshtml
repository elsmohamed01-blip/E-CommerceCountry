
@model IndexVM
<br />
<div class="container">
    <h2 style="text-align:center">المنتجات المتاحة في : <strong>@Model.SelectedCountry</strong></h2>
    <br />

    <div class="row">
        <div class="col-md-12">
            <div class="product-filters">

                <ul>
                    <li class="filter-active" data-filter="*">All</li>


                    @if (Model.Categories != null)
                    {
                        foreach (var item in Model.Categories)
                        {
        <li data-filter="._@item.Id">@item.Name</li>
}
}
                </ul>
                <br />
                <div class="row product-lists" style="position: relative; height: 519.7px;">
                    @if (Model.Products != null)
                    {
        @foreach (var item in Model.Products)
        {
<div class="col-lg-4 col-md-6 text-center strawberry _@(item?.Cateo?.Id)">
    <div class="single-product-item  _@(item?.Cateo?.Id)">

        <div class="product-image">
            <a href="/Home/ProductShow/@item.Id"><img src="@item.Image" style="max-height: 150px;min-height:150px" alt=""></a>
        </div>
        <h3>@item.Name</h3>
        <p class="product-price"><span> كمية المنتج: @item.Quantity</span> @item.Price @item.Currency </p>
        <form asp-action="AddToCart" asp-controller="Home" method="post">
            <input type="hidden" name="id" value="@item.Id" />
            <label for="quantity">الكمية:</label>
            <input type="number" id="quantity" name="quantity" min="1" value="1" />
            <br />
            <br />
            <button type="submit" class="btn btn-outline-dark" style="">
                <i class="fas fa-shopping-cart"></i> اضف إلى السلة
            </button>
        </form>
    </div>
</div>          }}

                </div>
            </div>
        </div>
    </div>
</div>
